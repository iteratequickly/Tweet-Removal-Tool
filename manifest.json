{
    "manifest_version": 3,
    "name": "TweetRemovalTool",
    "version": "1.0",
    "description": "Advanced cleanup tool for social timelines.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://x.com/*",
        "https://twitter.com/*"
    ],
    "action": {
        "default_title": "Open TweetRemovalTool"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}